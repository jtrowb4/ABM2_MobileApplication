<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.c196.abm2_mobileapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ABM2_MobileApplication">
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:label="ABM2 Mobile Application">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.HomeScreenActivity"
            android:exported="false"
            android:label="Home" />
        <activity
            android:name=".controller.TermScreenActivity"
            android:exported="false"
            android:label="Terms View"
            android:parentActivityName=".controller.HomeScreenActivity" />
        <activity
            android:name=".controller.TermDetail"
            android:exported="false"
            android:label="Terms Editor"
            android:parentActivityName=".controller.TermScreenActivity" />
        <activity
            android:name=".controller.CourseScreenActivity"
            android:exported="false"
            android:label="Courses"
            android:parentActivityName=".controller.HomeScreenActivity" />
        <activity
            android:name=".controller.CourseDetail"
            android:exported="false"
            android:label="Course Editor"
            android:parentActivityName=".controller.CourseScreenActivity" />
    </application>

</manifest>